GridLayout:
	rows: 2
	
	Label:
		id:entry
		font_size:80

	GridLayout:
        rows:4
        cols:4
        spacing:5
		padding:5

		Button:
			text:"9"
			on_press:entry.text+=self.text
		Button:
			text:"8"
			on_press:entry.text+=self.text
		Button:
			text:"7"
			on_press:entry.text+=self.text
		Button:
			text:"+"
			on_press:entry.text+=self.text
		Button:
			text:"6"
			on_press:entry.text+=self.text
		Button:
			text:"5"
			on_press:entry.text+=self.text
		Button:
			text:"4"
			on_press:entry.text+=self.text
		Button:
			text:"-"
			on_press:entry.text+=self.text
		Button:
			text:"3"
			on_press:entry.text+=self.text
		Button:
			text:"2"
			on_press:entry.text+=self.text
		Button:
			text:"1"
			on_press:entry.text+=self.text
		Button:
			text:"*"
			on_press:entry.text+=self.text
		Button:
			text:"0"
			on_press:entry.text+=self.text
		Button:
			text:"AC"
			on_press:entry.text=''
		Button:
			text:"="
			on_press:entry.text=str(eval(entry.text))
		Button:
			text:"/"
			on_press:entry.text+=self.text
