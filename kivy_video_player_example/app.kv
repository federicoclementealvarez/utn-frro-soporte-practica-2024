#:import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManager:
        id: screenmanager
        transition: SlideTransition()

        Screen:
                name: "screen1"
                
                GridLayout:
                        rows:1
                        cols:2


                        VideoPlayer:
                                id: video1
                                source: 'monkey1.mp4'
                                state: 'play'
                        
                        GridLayout:
                                rows:3
                                cols:1
                                size_hint_x:None
                                size_hint_y:None
                                width: 150
                                height: 600

                                Label:
                                        text:""
                                        size_hint_x:None
                                        size_hint_y:None
                                        height: 220

                                Button:
                                        text:"Siguiente \n       >"
                                        on_press: screenmanager.transition = SlideTransition(direction="right")
                                        on_press: app.root.current = "screen2"
                                        on_press: video1.state = "stop"
                                        on_press: video2.state = "play"
                                        size_hint_x:None
                                        size_hint_y:None
                                        width: 150
                                        height: 150
                                        background_color: 0, 1, 0, 1

                                

        Screen:
                name: "screen2"
                
                GridLayout:
                        rows:1
                        cols:2

                        GridLayout:
                                rows:3
                                cols:1
                                size_hint_x:None
                                size_hint_y:None
                                width: 150
                                height: 600

                                Label:
                                        text:""
                                        size_hint_x:None
                                        size_hint_y:None
                                        height: 220

                                Button:
                                        text:"Anterior \n      <"
                                        on_press: screenmanager.transition = SlideTransition(direction="left")
                                        on_press: app.root.current = "screen1"
                                        on_press: video2.state = "stop"
                                        on_press: video1.state = "play"
                                        size_hint_x:None
                                        size_hint_y:None
                                        width: 150
                                        height: 150
                                        background_color: 1, 0, 0, 1

                        VideoPlayer:
                                id: video2
                                source: 'monkey2.mp4'